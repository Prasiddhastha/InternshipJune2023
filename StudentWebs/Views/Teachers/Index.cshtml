@model IEnumerable<StudentWebs.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4" style="background-color:#323645">
        <div class="col-6">
            <h2 class="text-primary">HOD List</h2>
        </div>
        <div class="col-6 text-end ">
            <a asp-asp-controller="Teachers" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> &nbsp;Create New</a>
        </div>
    </div>
    <br />
    <div class="row p-3 mx-5 ">
<table class="table">
    <thead>
        <tr>
            <th>

           </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
             <th>
             @Html.DisplayNameFor(model => model.ContactNo)
             </th>
           <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
              <td>
              <img src="~/images/@item.ImagePath" style="width:75px;height:75px;">
              </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
              <td>
            @Html.DisplayFor(modelItem => item.ContactNo)
              </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.FacultyName)
            </td>
            <td>
               <div class="btn-group">
               <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary m1-1">Details</a>
                  <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger m1-1">Delete</a>
               </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
