@model StudentWebs.Models.ViewModel.CountViewModel

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .card {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 20px;
        margin: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .carousel-img {
        width: 100%;
        height: 50vh;
        /*object-fit: cover;*/
    }

    .carousel-caption {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 36px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    /* Adjust the carousel container to cover the entire width */
    .carousel-container {
        width: 100%;
        overflow: hidden;
    }

    /* Adjust the carousel inner container to take full width */
    .carousel-inner {
        width: 100%;
    }
</style>

<div class="carousel-container">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="#">
                    <img src="https://i.imgur.com/EEmeEY2.jpg" title="source: imgur.com" alt="Slide 1" class="carousel-img" />
                </a>
            </div>

            <div class="carousel-item">
                <a href="#">
                    <img src="https://i.imgur.com/DyMyqfr.jpg" title="source: imgur.com" alt="Slide 2" class="carousel-img" />
                </a>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
</div>
<br />
<br />
<br />
<br />
<br />
<br />
<div class="container mt-5" style="margin-top:50px;">
    <div>
        <h3 style="text-align:center; font-size:41px;">Statistics</h3>
    </div>
    <div class="row">
       
        <div class="col-md-4">
            <div class="card">
                <h3 style="text-align:center;">Total Faculties</h3>
                <p style="font-size:20px; text-align:center; color:red;">@Model.FacultyCount</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <h3 style="text-align:center;">Total Students</h3>
                <p style="font-size:20px; text-align:center; color:red;">@Model.StudentCount</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <h3 style="text-align:center;">Total Teachers</h3>
                <p style="font-size:20px; text-align:center; color:red;">@Model.TeacherCount</p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Initialize the carousel manually
        document.addEventListener("DOMContentLoaded", function () {
            var carouselElement = document.getElementById("carouselExampleIndicators");
            var carousel = new bootstrap.Carousel(carouselElement); // Initialize the carousel

            // Set the slide interval to 5 seconds
            carouselElement.addEventListener("slid.bs.carousel", function () {
                setTimeout(function () {
                    carousel.next();
                }, 5000); // 5 seconds in milliseconds
            });

            // Start the carousel sliding
            carousel.next();
        });
    </script>
}
